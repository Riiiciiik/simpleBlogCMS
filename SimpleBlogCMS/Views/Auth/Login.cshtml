@model SimpleBlogCMS.ViewModels.AuthLogin

@{
    ViewBag.Title = "Login";
}

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <div class="form-group">
            @Html.LabelFor(x => x.Username)
            @Html.EditorFor(x => x.Username, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Password)
            @Html.EditorFor(x => x.Password, new { @class = "form-control" })
        </div>

        <div>
            <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-log-in"></span> Login</button>
        </div>
    }
</div>

